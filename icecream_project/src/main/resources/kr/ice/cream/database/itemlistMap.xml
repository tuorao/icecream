<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="itemlist">
	<insert id="input" parameterType="kr.ice.crea.dto.ItemlistDTO">
		INSERT INTO itemlist
		(itemsrl, amount, sort) VALUES
		(#{itemsrl},#{amount},#{sort});
	</insert>
	<select id="pullItemSrl" parameterType="String" resultType="Integer">
		SELECT itemsrl
		FROM itemlist
		WHERE sort=#{sort};
	</select>
	<select id="pullItemlist" parameterType="String" resultType="kr.ice.crea.dto.ItemlistDTO">
		SELECT *
		FROM itemlist
		WHERE sort=#{sort};
	</select>
</mapper>